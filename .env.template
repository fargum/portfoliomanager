# Environment variables for Docker Compose
# Copy this file to .env and fill in your actual values
# This file should be added to .gitignore to keep credentials secure

# Database Configuration
DB_HOST=host.docker.internal
DB_PORT=5432
DB_NAME=portfolio_manager
DB_USERNAME=your_db_username_here
DB_PASSWORD=your_db_password_here

# EOD Historical Data API Configuration
EOD_API_TOKEN=your_eod_api_token_here

# Azure Foundry Inference Endpoint Configuration
AZURE_FOUNDRY_ENDPOINT=https://your-foundry-instance.openai.azure.com/
AZURE_FOUNDRY_API_KEY=your_foundry_api_key_here
AZURE_FOUNDRY_PROJECT_ENDPOINT=https://your-project.services.ai.azure.com/api/projects/your-project-id

# Azure Active Directory Configuration
AZURE_AD_INSTANCE=https://login.microsoftonline.com/
AZURE_AD_DOMAIN=your_domain.onmicrosoft.com
AZURE_AD_TENANT_ID=your_tenant_id_here
AZURE_AD_CLIENT_ID=your_api_client_id_here
AZURE_AD_UI_CLIENT_ID=your_ui_client_id_here
AZURE_AD_AUDIENCE=api://your_api_client_id_here

# ASP.NET Core Environment
ASPNETCORE_ENVIRONMENT=Development